@model IEnumerable<OnlineShop.Models.Car>

@{
    ViewBag.Title = "Index";
}

<h2 class="Cars">Cars</h2>
<p>
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        <b>Search by : </b>@Html.RadioButton("Searchby", "Make",true)<text> Make</text>
        @Html.RadioButton("Searchby", "Model")<text> Model</text>
        @Html.RadioButton("Searchby", "Category")<text> Category</text>
        @Html.RadioButton("Searchby", "Year")<text> Year</text>
        @Html.TextBox("search")<input type="submit" value="Search"/>
    }
</p>

<p>
    @Html.ActionLink("Create new", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Owner)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Owner.Email)
        </td>
     
        <td>
            @Html.DisplayFor(modelItem => item.Make)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
       
        <td>
            @if (item.Image != null)
            {
            <img src="data:image;base64,@System.Convert.ToBase64String(item.Image)" class="Images"/>
            }
        </td>
        <td>
          @if (User.IsInRole("Admin"))
          { 
              @Html.ActionLink("Edit  ", "Edit", new { id=item.Id },new { @class = "btn btn-info" })
             
              @Html.ActionLink("Delete  ", "Delete", new { id=item.Id },new { @class = "btn btn-danger" })
          }
              @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning"})
        </td>
    </tr>
}

</table>

