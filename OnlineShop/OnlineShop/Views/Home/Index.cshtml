
@model List<OnlineShop.Models.Car>
@{
    ViewBag.Title = "Home";
}
<body class="BG">
  
</body>

@foreach (var car in Model)
{

    <div class="row">
        <div class="recipe col-md-6">
            <h2>@car.Make @car.Model</h2>
            <div class="about">
                Posted on <i>@car.DateAdded.ToString("d")</i>

                <div>
                    @if (car.Image != null)
                    {
                        <img src="data:image;base64,@System.Convert.ToBase64String(car.Image)" class="image" />
                        <h4>@car.Price $</h4>
                    }
                </div>

            </div>

        </div>
    </div>
        <div>
            @Html.ActionLink("Details", "Details", "Cars", new { id = car.Id }, new { @class = "btn btn-info" })
        </div>
}

